@model IEnumerable<ClinicaMedica.Models.Entidades.ExamePrescrito>

<div class="container tableContainer">
    <div class="col-md-12">
        <table id="" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Exame
                    </th>
                    <th>
                        Paciente
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Detalhes)
                    </th>
                    <th>
                        Resultado
                    </th>
                    <th>
                        Enviar
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Exame.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Paciente.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Detalhes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ResultadoUrl)
                        </td>
                        <td>
                            @if (@item.ResultadoLiberado != true && @item.ResultadoUrl != null)
                            {
                                <div class="checkbox">
                                    <input class="chckResultado" id="@item.ExamePrescritoId" type="checkbox" runat="server"
                                           data-id="@item.ExamePrescritoId" data-pacienteId="@item.PacienteId" data-medicoId="@item.MedicoId" data-exameId="@item.ExameId">
                                </div>
                            }
                        </td>
                        <td>
                            <button class="btn btn-primary editExame" data-id="@item.ExamePrescritoId">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            </button>
                            <button class="btn btn-danger deleteExame" data-id="@item.ExamePrescritoId">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
