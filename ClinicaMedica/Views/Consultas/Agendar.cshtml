@model ClinicaMedica.Models.Entidades.Consulta

@{
    ViewBag.Title = "Agendar";
}

<div class="jumbotron">
    <div class="row">
        @using (Html.BeginForm())
        {
        <div class="form-horizontal">
            <div class="form-group col-md-5">
                <div class="control-label col-md-2">
                    <b>Médico</b>
                </div>
                <div class="col-md-3">
                    <select id="medicoSeletor" class="textarea-maxsize selectpicker" data-live-search="true">
                        @foreach (var item in ViewBag.MedicoLista)
                        {
                            <option value="@item.MedicoId">@item.Nome (@item.Especializacao)</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group col-md-5">
                <div class="control-label col-md-2">
                    <b>Data</b>
                </div>
                <div>
                    <input value=@DateTime.Now , id="datetimepicker1" , class="form-control datetimepicker">
                </div>
            </div>
            <div class="col-md-2">
                <input id="btnAgendar" value="Agendar" class="btn btn-primary" />
            </div>
        </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}